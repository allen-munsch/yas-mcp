# .env.example - Copy to .env and customize

# OpenAPI/Swagger file path (required)
SWAGGER_FILE_PATH=./examples/todo-app/openapi.yaml

# Adjustments file path (optional)
ADJUSTMENTS_FILE_PATH=./examples/todo-app/adjustments.yaml

# Config file path (optional)
CONFIG_FILE_PATH=./config.yaml

# Server configuration
OPENAPI_MCP_PORT=3000
SERVER_MODE=http

# API endpoint (the actual API you're proxying to)
API_BASE_URL=http://prism:4010

# Prism mock server port
PRISM_PORT=8080

# Logging
LOG_LEVEL=info
LOG_FORMAT=compact
